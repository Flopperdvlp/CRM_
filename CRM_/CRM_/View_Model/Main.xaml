<Window x:Class="CRM_.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM_.View"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="SideMenu" Background="LightGray" Orientation="Vertical">
            <Button Content="Workers" Margin="5" Click="Workers"/>
            <Button Content="Workers list" Margin="5" Click="Workers_list"/>
            <Button Content="Company" Margin="5" Click="Compnay"/>
            <Button Content="Businesses" Margin="5" Click="Businesses"/>
        </StackPanel>
        <TreeView x:Name="UsersTreeView" Grid.Column="1" Margin="10" Background="White" BorderBrush="LightGray" BorderThickness="1"/>
    </Grid>
</Window>